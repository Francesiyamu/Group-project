    <!-- ------------- CONTENT PAGE ------------- -->
    <div id="body_without_navbar">
        <div class="content">

            <!-- ------------- HEADING ------------- -->
            <div id="heading">
                <h1>Projecten</h1>
                <input id="searchBox" type="text" onkeyup="tableSearch()" placeholder="Zoek... ">
            </div>

            <!-- ------------- TABLE ------------- -->
            <div id="table" class="table-section" data-url="/data">
                <table class="table-section__table" data-filter-control="true" data-show-search-clear-button="true">
                <thead>
                    <tr>
                        <th>Projectnaam</th>
                        <th>Klantnaam</th>
                        <th col-index = 1>Status <br>
                            <select class="table-filter" onchange="filter_rows()">
                              <option value="all"></option>
                            </select>
                        </th>
                        <th>Gemeente</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each projecten}}
                    <tr onclick="window.location='./subpaginas_project.html?id={{projectnr}}'">
                        <td>{{projectnaam}}</td>
                        <td>{{achternaam}}, {{voornaam}}</td>
                        <td>{{status}}</td>
                        <td>{{gemeente}}</td>
                    </tr>
                    {{/each}}
                </tbody>
                </table>
            </div>

            <!-- ------------- BUTTON ------------- -->
            <div class="button">
                <a href="nieuw_project.html" id="btn_new">Project toevoegen</a>
            </div>
        </div>
</div>
