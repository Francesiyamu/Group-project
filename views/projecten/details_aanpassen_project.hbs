<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project aanpassen</title>
    <link rel="stylesheet" href="../CSS/projecten.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> <!--https://www.w3schools.com/icons/tryit.asp?filename=tryicons_fa-sign-out-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  
  <form id="form_projecten" method="post" action="/projecten/submission_update_project_form">
    <h1 class="visible">Details</h1>
    <h1 class="hidden" id="titel">project aanpassen</h1>
    <div class="inputs">     
        <div id="projectgegevens_box">
            <h2>Projectgegevens</h2>

            {{#with project}}
            <div id="nr" class="form_group">
              <input type="hidden" class="form-control" id="projectnr" name="projectnr" max="10000" value="{{projectnr}}" disabled>
            </div>

            <div class="form_group">
              <label for="projectnaam">Projectnaam:</label>
              <input type="text" class="form-control" id="projectnaam" name="projectnaam" max="255" value="{{projectnaam}}" disabled>
            </div>            

            <div class="form_group">
              <label for="klantnaam">Klantnaam:</label>
              <select name="klantnr" id="klantnaam" disabled>
                {{#with ../klant}}
                  <option value="{{klantnr}}">{{voornaam}} {{achternaam}}</option>
                {{/with}}
                {{#each ../klanten}} 
                  <option value="{{klantnr}}">{{voornaam}} {{achternaam}}</option>
                {{/each}}
              </select>
            </div>

            <div class="form_group">
              <label for="status">Status:</label> 
              <select name="status" id="status" class="form-control" disabled>
                  <option value="afgewerkt">Afgewerkt</option>
                  <option value="nietAfgewerkt" selected>Niet afgewerkt</option>
              </select>
            </div>

            <div class="form_group">
              <label for="straatnaam">Straatnaam:</label>
              <input type="text" class="form-control" id="straatnaam" name="straatnaam" max="255" placeholder="Kerkstraat" value="{{straatnaam}}" disabled>
            </div>

            <div class="form_group">
              <label for="huisnr">Huisnummer:</label>
              <input type="text" class="form-control" id="huisnr" name="huisnr" max="255" placeholder="14" value="{{huisnr}}" disabled>
            </div>

            <div class="form_group">
              <label for="gemeente">Gemeente:</label>
              <input type="text" class="form-control" id="gemeente" name="gemeente" max="255" placeholder="Anderlecht" value="{{gemeente}}" disabled>
            </div>

            <div class="form_group">
              <label for="postcode">Postcode:</label>
              <input type="text" class="form-control" id="postcode" name="postcode" max="6" placeholder="1070" value="{{postcode}}" disabled> 
            </div>

            <div class="form_group">
                <label for="land">Landcode:</label>
                <select name="land" id="land" value="{{land}}" disabled>
                    <option value="{{land}}">{{land}}</option>
                    {{#each ../countries}}
                         <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>    
        </div>

    <div class="btns_details visible">
      <div class="modify_back_btns">
          <a href="subpaginas_project.html?id={{projectnr}}" id="btn_back" class="btn_bottom">Back</a>
          <button id="btn_modify" class="btn_bottom">Project aanpassen</button>
      </div>
      <a href="/projecten/verwijderen_project?id={{projectnr}}" id="btn_remove" class="btn_bottom">Project verwijderen</a>
  </div>

  <div class="btns hidden">
      <a href="#" id="cancelbtn" class="btn_bottom">Annuleren</a> <!-- Maak btn, let op css-->
      <input type="submit" id="submitbtn" value="Save" class="btn_bottom" disabled>
  </div>

  {{/with}}   
</form> 

<div id="errorMsgs">
  {{#each errors}}
    <p class="errorMsg">{{this}}</p>
  {{/each}}
</div>

<script src="../JS/details_aanpassen.js"></script>
</body>
</html>