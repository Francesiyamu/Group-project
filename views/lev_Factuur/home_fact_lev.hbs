            <div id="heading">
                <h1>Factuur leveranciers</h1>
                <input id="searchBox" type="text" onkeyup="tableSearch()" placeholder="Zoek... ">
            </div>
    
    <!-- ------------- TABLE ------------- -->
            <div  class="table-section" data-url="/data">
                <table id="table" class="table-section__table" data-filter-control="true" data-show-search-clear-button="true">
                  <thead>
                        <th col-index = 1>Factuur <br>nummer </th> 
                        <th col-index = 2>Factuur Datum <br>
                          <select class="table-filter" onchange="filter_rows()" >
                            <option value ="all"></option>
                          </select>
                        </th>
                        <th col-index = 3>Status <br>
                          <select class="table-filter" onchange="filter_rows()">
                            <option value="all"></option>
                          </select>
                        </th>
                        <th col-index = 4>Terugbetaald <br>
                          <select class="table-filter" onchange="filter_rows()">
                            <option value="all"></option>
                          </select>
                        </th>
                        <th col-index = 5>BTW % <br>
                          <select class="table-filter" onchange="filter_rows()">
                            <option value="all"></option>
                          </select>
                        </th>
                        <th col-index = 6>Verstuurd <br>boekhouder <br>
                          <select class="table-filter" onchange="filter_rows()">
                            <option value="all"></option>
                          </select>
                        </th>
                    
                  </thead>

                  <tbody>
                    {{#each LevFacturen}}
                    <tr onclick="window.location='/home_fact_lev?var={{factuurid}}'">
                        <td>{{factuurnr}}</td>
                        <td>{{factuurDatum}}</td>
                        <td>{{statusBetaling}}</td>
                        <td>{{terugbetaald}}</td>
                        <td>{{BTWperc}}</td>
                        <td>{{verstuurdBoekhouder}}</td>
                    </tr>
                    {{/each}}
                </tbody>
                </table>
