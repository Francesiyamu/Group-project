<!-- ------------- CONTENT PAGE ------------- -->
    <div id="body_without_navbar">
        <div class="content">

            <!-- ------------- HEADING ------------- -->
            <div id="heading">
                <h1>Klanten facturen</h1>
                <input id="searchBox" type="text" onkeyup="tableSearch()" placeholder="Zoek... ">
            </div>

            <!-- ------------- TABLE ------------- -->
            <div id="table" class="table-section" data-url="/data">
                <table id ="table_home" class="table-section__table" data-filter-control="true" data-show-search-clear-button="true">
                <thead>
                    <tr>
                        <th col-index = 1>Factuurnummer</th>
                        <th col-index = 2>Factuurdatum <br>
                          <select class="table-filter" onchange="filter_rows()" >
                            <option value ="all"></option>
                          </select>
                        </th>
                        <th col-index = 3>Klantnaam</th>
                        <th col-index = 4>Totaal excl. BTW</th>
                        <th col-index = 5>BTW %</th>
                       <th col-index = 6>Status <br>
                            <select class="table-filter" onchange="filter_rows()">
                              <option value="all"></option>
                            </select>
                       </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each Facturen}}
                    <tr onclick="window.location='./details_aanpassen_klantFactuur.html?var={{factuurid}}'">
                        <td>{{factuurnr}}</td>
                        <td>{{factuurDatum}}</td>
                        <td>{{achternaam}}, {{voornaam}}</td>
                        <td>{{bedragNoBTW}}</td>
                        <td>{{BTWperc}}</td>
                        <td>{{statusBetaling}}</td>
                    </tr>
                    {{/each}}

                  
                </tbody>
                </table>
            </div>

            <!-- ------------- BUTTON ------------- -->
            <div class="button">
                <a href="nieuw_KlantFactuur.html" id="btn_new" class="no_boekhouder">Factuur toevoegen</a>
            </div>
